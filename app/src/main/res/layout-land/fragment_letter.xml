<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LetterFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Choose a letter"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/alphabet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/buttonA"
                android:layout_width="40dp"
                android:layout_height="44dp"
                android:text="A" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="B" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="C" />

            <Button
                android:id="@+id/buttonD"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="D" />

            <Button
                android:id="@+id/buttonE"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="E" />

            <Button
                android:id="@+id/buttonF"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="F" />

            <Button
                android:id="@+id/buttonG"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="G" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <Button
                android:id="@+id/buttonH"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="H" />

            <Button
                android:id="@+id/buttonI"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="I" />

            <Button
                android:id="@+id/buttonJ"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="J" />

            <Button
                android:id="@+id/buttonK"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="K" />

            <Button
                android:id="@+id/buttonL"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="L" />

            <Button
                android:id="@+id/buttonN"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="N" />

            <Button
                android:id="@+id/buttonM"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="M" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/buttonO"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="O" />

            <Button
                android:id="@+id/buttonP"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="P" />

            <Button
                android:id="@+id/buttonQ"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="Q" />

            <Button
                android:id="@+id/buttonR"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="R" />

            <Button
                android:id="@+id/buttonS"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="S" />

            <Button
                android:id="@+id/buttonT"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="T" />

            <Button
                android:id="@+id/buttonU"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="U" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:id="@+id/buttonV"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="V" />

            <Button
                android:id="@+id/buttonW"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="W" />

            <Button
                android:id="@+id/buttonX"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="X" />

            <Button
                android:id="@+id/buttonY"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="Y" />

            <Button
                android:id="@+id/buttonZ"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:text="Z" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alphabet">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="HINT:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="this is hint" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>